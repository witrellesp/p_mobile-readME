<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="p_mobile2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:p_mobile2"
    Shell.FlyoutBehavior="Disabled"
    Title="p_mobile2">

    <TabBar>

        <ShellContent
     Title="Home"
      ContentTemplate="{DataTemplate local:MainPage}"
      Icon="home.png"
      Route="MainPage" />


        <ShellContent
      Title="Library"
      ContentTemplate="{DataTemplate local:Library}"
      Icon="library.png"
      Route="MainPage" />


        <ShellContent
      Title="Search"
      ContentTemplate="{DataTemplate local:PageSearch}"
      Icon="search.png"
      Route="MainPage" />

        <ShellContent
       Title="Add Book"
      ContentTemplate="{DataTemplate local:PageAddBook}"
      Icon="add.png"
      Route="MainPage" />

        <ShellContent
       Title="User"
       ContentTemplate="{DataTemplate local:PageUser}"
       Icon="user.png"
       Route="MainPage" />

    </TabBar>
</Shell>
